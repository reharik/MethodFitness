// "off" or 0 - turn the rule off
// "warn" or 1 - turn the rule on as a warning (does not affect exit code)
// "error" or 2 - turn the rule on as an error (exit code will be 1)

{
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "cypress/globals": true
  },
  "extends": ["prettier", "eslint:recommended", "plugin:cypress/recommended"],
  "globals": {
    "__dirname": true,
    "console": true,
    "module": true,
    "Promise": true,
    "require": true,
    "Symbol": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "parserOptions.ecmaVersion" : 2017
    },
    "ecmaVersion": 2017,
    "sourceType": "module"
    //'no-strict' is no longer needed (https://github.com/yannickcr/eslint-plugin-react/issues/447#issuecomment-184617282)
  },
  "plugins": ["mocha", "cypress"],
  "rules": {
    "cypress/no-unnecessary-waiting": 0,
    "mocha/no-exclusive-tests": "error",
    "arrow-parens": [2, "as-needed"],
    "camelcase": 1,
    "consistent-return": 1,
    "curly": [2, "all"],
    "dot-notation": [
      2,
      {
        "allowKeywords": true
      }
    ],
    "eol-last": 2,
    "eqeqeq": 2,
    "func-names": 0,
    "new-cap": 1,
    "new-parens": 2,
    "no-alert": 2,
    "no-array-constructor": 2,
    "no-caller": 2,
    "no-catch-shadow": 1,
    "no-confusing-arrow": 1,
    "no-console": [
      2,
      {
        "allow": ["log", "warn", "error"]
      }
    ],
    "no-eval": 2,
    "no-extend-native": 2,
    "no-extra-bind": 2,
    "no-extra-parens": [2, "functions"],
    "no-implied-eval": 2,
    "no-iterator": 2,
    "no-label-var": 2,
    "no-labels": 2,
    "no-lone-blocks": 2,
    "no-loop-func": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-multi-spaces": 2,
    "no-multi-str": 2,
    "no-native-reassign": 2,
    "no-new": 2,
    "no-new-func": 2,
    "no-new-object": 2,
    "no-new-wrappers": 2,
    "no-octal-escape": 2,
    "no-process-exit": 2,
    "no-proto": 2,
    "no-return-assign": 1,
    "no-script-url": 2,
    "no-sequences": 2,
    "no-shadow": 1,
    "no-shadow-restricted-names": 2,
    "no-spaced-func": 2,
    "no-trailing-spaces": 2,
    "no-undef-init": 2,
    "no-underscore-dangle": 0,
    "no-unneeded-ternary": [
      2,
      {
        "defaultAssignment": false
      }
    ],
    "no-unused-expressions": 0,
    "no-var": 1,
    "no-with": 2,
    "object-shorthand": [
      2,
      "always",
      {
        "avoidQuotes": true,
        "ignoreConstructors": true
      }
    ],
    "one-var": [2, "never"],
    "quotes": [
      2,
      "single",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "quote-props": [2, "as-needed"],
    "require-yield": 0,
    "rest-spread-spacing": [2, "never"],
    "semi": 2,
    "semi-spacing": [
      2,
      {
        "before": false,
        "after": true
      }
    ],
    "space-before-blocks": 2,
    "space-infix-ops": 2,
    "space-unary-ops": [
      2,
      {
        "words": true,
        "nonwords": false
      }
    ],
    "strict": [2, "safe"],
    "vars-on-top": 2,
    "yoda": [2, "never"]
  }
}
